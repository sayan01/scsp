@model scsp.Models.User

@{
    ViewData["Title"] = "Register - SCSP";
}

@section Styles {
    <link href="@Url.Content("~/css/register.css")" rel="stylesheet" type="text/css" />
}


<div class="text-center">
    <h1 class="display-4">Social Content Sharing Platform</h1>
    <h1 class="display-5">Register</h1>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Register" id="register-form">
            <div class="form-group">
                <label asp-for="UserID" class="control-label">Username</label>
                <span class="text text-danger">*</span>
                <input asp-for="UserID" class="form-control" required maxlength="32" minlength="1" name="username" id="username"/>
            </div>
            <div class="form-group">
                <label class="control-label">Password</label>
                <span class="text text-danger">*</span>
                <input class="form-control" type="password" required minlength="8" name="password" id="password"/>
            </div>
            <div class="form-group">
                <label asp-for="FName" class="control-label">First Name</label>
                <span class="text text-danger">*</span>
                <input asp-for="FName" class="form-control" required maxlength="32" name="fname" id="fname"/>
            </div>
            <div class="form-group">
                <label asp-for="LName" class="control-label">Last Name</label>
                <input asp-for="LName" class="form-control" maxlength="32" name="lname" id="lname"/>
            </div>
            <div class="form-group">
                <label asp-for="Bio" class="control-label"></label>
                <textarea asp-for="Bio" class="form-control" type="text" maxlength="250" form="register-form" name="bio" id="bio"></textarea>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br><hr><br>
<div>
    <a asp-action="Index">Back to Authentication</a>
</div>

@section Scripts {
    
}
