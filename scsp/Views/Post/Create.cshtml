@model scsp.Models.Post

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" class="form-control" name="content" id="content" maxlength="250"> </textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <br>
            <span class="form-group">
                <input type="submit" value="Create" class="btn btn-success" required/>
            </span>
            <span>
                <a class="btn btn-outline-danger" href="javascript: history.go(-1)">Cancel</a>
            </span>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
